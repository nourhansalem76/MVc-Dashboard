@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<div class="row justify-content-center align-items-center my-4">
    <form asp-action="Index" class="row col-8 offset-1 mt-5">
        <div class="col-8">
            <input type="search" class="form-control" name="name" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>
</div>

<h1>All Roles</h1>
<br></br>
<br></br>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R => R.Id)</td>
                <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => role.Id)</td>
                    <td>@Html.DisplayFor(M => role.RoleName)</td>


                    <partial name="_ButtonsPartialView" model="@role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h3 class="alert alert-warning">There Is No Roles!!</h3>
    </div>
}


