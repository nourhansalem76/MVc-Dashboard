@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center align-items-center my-4">
    <form asp-action="Index" class="row col-8 offset-1 mt-5">
        <div class="col-8">
            <input type="search" class="form-control" name="email" placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>
</div>

<h1>All Users</h1>
<br></br>
<br></br>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => user.Id)</td>
                    <td>@Html.DisplayFor(M => user.FName)</td>
                    <td>@Html.DisplayFor(M => user.LName)</td>
                    <td>@Html.DisplayFor(M => user.Email)</td>
                    <td>@Html.DisplayFor(M => user.PhoneNumber)</td>
                    <td>@string.Join(", ",user.Roles)</td>


                    <partial name="_ButtonsPartialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h3 class="alert alert-warning">There Is No Users!!</h3>
    </div>
}


