@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">

		</form>
		<p>Don't have an Account? <a asp-action="Register"> Sign Up Now</a></p>
		<p><a asp-action="ForgetPassword">Forget Password</a></p>
	</div>
</div>

@section ValidationScriptSection
	{

		<partial name="_ValidationScriptsPartial" />
}



